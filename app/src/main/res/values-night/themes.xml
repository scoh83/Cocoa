        <item name="android:navigationBarColor">@color/myStatusBarColor</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Cocoa.Main" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainStatusBarColor</item>
        <item name="colorPrimaryVariant">@color/mainStatusBarColor</item>
        <item name="colorOnPrimary">@color/mainStatusBarColor</item>
