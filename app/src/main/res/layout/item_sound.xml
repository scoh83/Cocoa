<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >
    <data>
        <variable  name="model"  type="com.www.cocoastudio.Sound" />
    </data>

    <LinearLayout
        android:background="@drawable/rounded_corner"
        android:padding="5dp"
        android:id="@+id/view_bg"
        android:layout_gravity = "left|center"
        android:gravity="left|center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginRight="5dp"
            android:gravity="center|center"
            android:layout_weight="1"
            android:id="@+id/txtItem1"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:fontFamily="@font/cookierunregular"
            android:text="@{model.text1}"
            android:textColor="@{model.color1}"
            android:visibility="@{model.visibility1}"
            android:textSize="60sp"
            />
        <TextView
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/txtItem2"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:fontFamily="@font/cookierunregular"
            android:text="@{model.text2}"
            android:textColor="@{model.color2}"
            android:visibility="@{model.visibility2}"
            android:textSize="60sp"
            />
        <TextView
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/txtItem3"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:fontFamily="@font/cookierunregular"
            android:text="@{model.text3}"
            android:textColor="@{model.color3}"
            android:visibility="@{model.visibility3}"
            android:textSize="60sp"
            />
        <TextView
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_weight="0"
            android:id="@+id/txtItem4"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:fontFamily="@font/cookierunregular"
            android:text="@{model.text4}"
            android:textColor="@{model.color4}"
            android:visibility="@{model.visibility4}"
            android:textSize="60sp"
            />
        <ImageView
            android:layout_weight="1"
            app:imageResource="@{model.image}"
            android:id="@+id/btnSound"
            android:layout_width="95dp"
            android:layout_height="95dp">
        </ImageView>
    </LinearLayout>

</layout>